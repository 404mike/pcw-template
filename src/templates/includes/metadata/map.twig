{% if page == 'item' %}
<div class="col-12 col-md-10 col-lg-8 text-start item-map">
    <div id="map" data-map-type="item"></div>
</div>
{% endif %}

{% if page == 'edit' %}
<div class="col-12 text-start item-map">

    <div class="card-body p-0">
        <div class="mb-2">
            <label for="contributeMapLocationSearch" class="form-label fs-6">
                Enter a city, town or village name here or use the +/- buttons on the map:
            </label>
            <div class="row">
                <div class="col-10">
                    <input type="text" class="form-control" id="contributeMapLocationSearch">
                </div>
            </div>
        </div>
    </div>

    <button id="contributeMapDropPin" type="button" class="btn btn-outline-primary mb-2">Drop pin <svg
            xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill"
            viewBox="0 0 16 16">
            <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6" />
        </svg></button>

    <button id="contributeRemoveMarker" type="button" class="btn btn-outline-primary mb-2 d-none">Remove location <svg
            xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash"
            viewBox="0 0 16 16">
            <path
                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
            <path
                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
        </svg></button>

    <div id="map" data-map-type="contribute"></div>
</div>
{% endif %}


{% if page == 'locate' %}
<div class="col-12 col-md-12 col-lg-12 mx-auto text-start item-map">

    <div class="card-body p-0">
        <div class="mb-2">
            <label for="contributeMapLocationSearch" class="form-label fs-6">
                Enter a city, town or village name here or use the +/- buttons on the map:
            </label>
            <div class="row">
                <div class="col-10">
                    <input type="text" class="form-control" id="contributeMapLocationSearch">
                </div>
            </div>
        </div>
    </div>

    <!-- sidebar -->
    <div class="map-container d-flex">
        <div id="map" class="flex-grow-1" data-map-type="locate"></div>

        <div id="mapSidebarOpenButton" class="rounded-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                class="bi bi-arrow-90deg-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M14.854 4.854a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 4H3.5A2.5 2.5 0 0 0 1 6.5v8a.5.5 0 0 0 1 0v-8A1.5 1.5 0 0 1 3.5 5h9.793l-3.147 3.146a.5.5 0 0 0 .708.708z" />
            </svg>
        </div>

        <div id="mapSidebar" class="
            m-2 
            rounded-4
            col-xs-6
            col-sm-8
            col-md-8
            col-lg-6
            col-xl-5
            col-xxl-4
            ">
            <div class="d-flex justify-content-between align-items-center border-bottom mb-2">
                <div>
                    <a href="#" class="map-locate-sidebar-nav locate-sidebar-nav-active"
                        id="mapLocateSidebarItems">Items</a>
                    <a href="#" class="map-locate-sidebar-nav" id="mapLocateSidebarSearch">Search filters</a>
                </div>
                <div>
                    <a href="#" class="map-locate-sidebar-nav" id="mapLocateSidebarClose">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-x-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path
                                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                        </svg>
                    </a>
                </div>
            </div>

            <!-- sidebar items-->
            <div id="locateSidebarItemsContainer" class="overflow-auto">
                <h2 class="mb-4">Showing 20 of 10,000 items</h2>
                <div id="locateSidebarItemsPreview" class="
                        row 
                        row-cols-2
                        row-cols-xs-2 
                        row-cols-sm-2 
                        row-cols-md-2 
                        row-cols-lg-2
                        row-cols-xl-2 
                        row-cols-xxl-2 
                        g-4">
                </div>
            </div>

            <div id="locateSidebarPagination" class="">
                {% include 'includes/pagination.twig' %}
            </div>
            <!-- end sidebar items -->

            <!-- sidebar search -->
            <div id="locateSidebarSearchContainer">
                {% include 'includes/components/facets_locate.twig' %}
            </div>
            <!-- end sidebar search -->

            <!-- Item Preview -->
            <div id="locateSidebarItemPreview" class="container mt-1">
                <div class="d-flex justify-content-end">
                    <button id="locateBackToItemsButton" type="button" class="btn btn-outline-dark mb-2">Back to
                        items</button>
                </div>
                <div class="card mt-2">
                    <img id="locateSideNodeImagePreview"
                        src="https://www.peoplescollection.wales/sites/default/files/styles/edit_node_thumb_larger/public/images/2014/February/GTJ11835_2.jpg?itok=v-XMza94"
                        class="card-img-top" alt="Card image">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the card's content.</p>
                        <a href="#" class="btn btn-dark">View Item</a>
                    </div>
                </div>
            </div>
            <!-- end Item Preview -->

        </div>
    </div>

</div>
{% endif %}


{% set row_classes = page == 'locate' ? 'row row-cols-auto justify-content-center' : 'row row-cols-auto' %}

<div class="{{ row_classes }} mt-2">
    <div class="col map-layer-buttons">
        <div class="mb-2 map-layer-button map-layer-button historical-map-layer layer-button-active"
            id="map-layer-google">
            <p class="map-button-date">2024</p>
            <p class="map-button-type">Modern Map</p>
        </div>
    </div>

    <div class="col map-layer-buttons">
        <div class="mb-2 map-layer-button map-layer-button historical-map-layer" id="map-layer-tithe">
            <p class="map-button-date">1838-1850</p>
            <p class="map-button-type">Tithe Map</p>
        </div>
    </div>

    <div class="col map-layer-buttons">
        <div class="mb-2 map-layer-button map-layer-button historical-map-layer" id="map-layer-1staddition">
            <p class="map-button-date">1868-1892</p>
            <p class="map-button-type">1st Edition</p>
        </div>
    </div>

    <div class="col map-layer-buttons">
        <div class="mb-2 map-layer-button map-layer-button historical-map-layer" id="map-layer-2ndaddition">
            <p class="map-button-date">1899-1908</p>
            <p class="map-button-type">2nd Edition</p>
        </div>
    </div>

    <div class="col map-layer-buttons">
        <div class="mb-2 map-layer-button map-layer-button historical-map-layer" id="map-layer-3rdaddition">
            <p class="map-button-date">1920-1932</p>
            <p class="map-button-type">3rd Edition</p>
        </div>
    </div>

    <div class="col map-layer-buttons">
        <div class="mb-2 map-layer-button map-layer-button historical-map-layer" id="map-layer-4thaddition">
            <p class="map-button-date">1938-1954</p>
            <p class="map-button-type">4th Edition</p>
        </div>
    </div>
</div>