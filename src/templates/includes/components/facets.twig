<div class="card mb-3">
    <div class="card-body">
        <div class="mb-3">

            <label for="my-autocomplete" class="form-label fs-5">Select relevant categories below</label>

            <div class="accordion" id="accordionPanelsStayOpenExample">
                {% for facet in whatFacet %}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading{{ facet.id }}">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#panelsStayOpen-{{ facet.id }}" aria-expanded="false"
                            aria-controls="panelsStayOpen-{{ facet.id }}">
                            {{ facet.name }}
                        </button>
                    </h2>
                    <div id="panelsStayOpen-{{ facet.id }}" class="accordion-collapse collapse"
                        aria-labelledby="heading{{ facet.id }}">
                        <div class="accordion-body contribute-facet-accordion">
                            <ul>
                                {% for v in facet.sub %}
                                <li class="contrib_input_validate form-check">
                                    <input class="form-check-input" data-parent="{{ v.nameClean }}"
                                        name="field_what_facet[]" value="{{ v.nameClean }}" class="facet-select"
                                        data-type="{{ facet.id }}" type="checkbox" id="facet_select_{{ v.nameClean }}">
                                    <label for="facet_select_{{ v.nameClean }}" class="form-check-label">{{ v.name
                                        }}</label>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>



