<div class="card mb-3 contribute-advanced d-none">

    <div class="card-body">
        <div class="mb-1">
            <label for="rights-holder" class="form-label fs-5">
                This section allows you to credit rights holders
            </label>
            <div class="row g-2">
                <div class="col-md-4">
                    <input type="text" class="form-control" id="rights-holder" placeholder="Rights holder">
                </div>
                <div class="col-md-4">
                    <select class="form-control" id="rights-type">
                        <option value="" disabled selected>Select rights type</option>
                        <option value="copyright">Copyright</option>
                        <option value="trademark">Trademark</option>
                        <option value="patent">Patent</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="date" class="form-control" id="rights-date" placeholder="Rights date">
                </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="mb-3">
            <label for="licence" class="form-label fs-5">
                Additional License Information
            </label>
            <div class="row">
                <div class="col-10">
                    <input type="text" class="form-control" id="licence" placeholder="">
                </div>
            </div>
        </div>

    </div>
</div>