<div class="card mb-3">
    <div class="card-body">
        <div class="mb-3">

            <div class="accordion">
                <label for="my-autocomplete" class="form-label fs-5">Select relevant categories below</label>

                <!-- Search Field Start -->
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search categories"
                        aria-label="Search categories" aria-describedby="button-search">
                    <button class="btn btn-outline-secondary" type="button" id="button-search">Search</button>
                </div>
                <!-- Search Field End -->

                <div id="contributeWhatFacet">

                    {% for facet in whatFacet %}
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#panelsStayOpenWhat-{{ facet.id }}" aria-expanded="false"
                                aria-controls="panelsStayOpenWhat-{{ facet.id }}">
                                {{ facet.name }}
                            </button>
                        </h2>
                        <div id="panelsStayOpenWhat-{{ facet.id }}" class="accordion-collapse collapse"
                            aria-labelledby="headingWhat{{ facet.id }}">
                            <div class="accordion-body contribute-facet-accordion">
                                <ul>
                                    {% for v in facet.sub %}
                                    <li class="contrib_input_validate form-check">
                                        <input class="form-check-input" data-parent="{{ v.nameClean }}"
                                            name="field_what_facet[]" value="{{ v.nameClean }}" type="checkbox"
                                            id="facet_select_{{ v.nameClean }}">
                                        <label for="facet_select_{{ v.nameClean }}" class="form-check-label">{{ v.name
                                            }}</label>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <div id="contribteWhenFacet" class="mt-3">
                    {% for facet in whenFacet %}
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#panelsStayOpenWhen-{{ facet.id }}" aria-expanded="false"
                                aria-controls="panelsStayOpenWhen-{{ facet.id }}">
                                {{ facet.name }}
                            </button>
                        </h2>
                        <div id="panelsStayOpenWhen-{{ facet.id }}" class="accordion-collapse collapse"
                            aria-labelledby="headingWhen{{ facet.id }}">
                            <div class="accordion-body contribute-facet-accordion">
                                <ul>
                                    {% for v in facet.sub %}
                                    <li class="contrib_input_validate form-check">
                                        <input class="form-check-input" data-parent="{{ v.nameClean }}"
                                            name="field_when_facet[]" value="{{ v.nameClean }}" type="checkbox"
                                            id="facet_select_{{ v.nameClean }}">
                                        <label for="facet_select_{{ v.nameClean }}" class="form-check-label">{{ v.name
                                            }}</label>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

            </div>

        </div>
    </div>
</div>