{% include 'includes/header.twig' %}

<div class="container" id="main-content" role="main">
    <div class="col-12">
        <div class="image-overlay-container">
            <img src="../images/homepage-top-banner.jpg" alt="Descriptive Alt Text" class="homepage-banner-image">
            <div class="overlay-content">
                <h1>Tell your Story</h1>
                <div class="d-flex justify-content-center">

                    <button class="btn btn-primary">Get Started</button>
                    <p>Be a part of history</p>
                </div>

            </div>
        </div>
    </div>

    <!-- Additional content blocks -->
    <div class="col-12">
        <div class="container mt-4">
            <div class="row justify-content-center">
                <!-- Central column of medium size 6 -->
                <div class="col-md-6">
                    <div class="row">
                        <!-- Text column -->
                        <div class="col-md-6">
                            <h4>Search the collection</h4>
                            <p>See what you can discover about the past</p>
                        </div>

                        <!-- Search form column -->
                        <div class="col-md-6">
                            <form class="position-relative">
                                <input type="search" class="form-control" placeholder="Search...">
                                <button type="submit" class="btn position-absolute top-0 end-0 border-0"
                                    style="background: none;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                        class="bi bi-search" viewBox="0 0 16 16">
                                        <path
                                            d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="homepageCarousel" class="col-12">
        <h2 class="text-center pt-3">Items in the spotlight</h2>
        <div class="col-8 row mx-auto my-auto justify-content-center">
            {% include 'includes/components/homepage_carousel.twig' %}
        </div>
    </div>

    <div class="col-12">
        <div class="container m-4">
            <div class="row justify-content-center">
                <!-- Central column of medium size 6 -->
                <div class="col-md-6">
                    <div class="row">
                        <!-- Text column -->
                        <div class="col-md-6">
                            <h4>Discover how can help and support your community group or project.</h4>
                            <button class="btn btn-primary">Click Me!</button>
                        </div>

                        <!-- Search form column -->
                        <div class="col-md-6">
                            <img src="../images/pcw-users.png" alt="Descriptive Alt Text" class="homepage-banner-image">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="col-12">
        <div class="image-overlay-container">
            <img src="../images/homepage-bottom-banner.jpg" alt="Descriptive Alt Text" class="homepage-banner-image">
            <div class="overlay-content">
                <h1>Helping organisations celebrate and share cultural heritage.</h1>
                <p>Explore how People's Collection Wales can help your organisation digitise and share your collections
                    with Wales the world.</p>
                <button class="btn btn-primary">Learn More</button>
            </div>
        </div>
    </div>

</div>

{% include 'includes/footer.twig' %}