{% include 'includes/header.twig' %}

<div class="container text-center" id="main-content" role="main">
    <div class="row justify-content-center">
        <div class="
            col-xxl-8
            col-xl-8
            col-lg-8
            col-md-10
            col-sm-12
            col-12
            ">

            <!-- Title and description -->
            <div class="text-center mb-4">
                <h1 class="fw-bold">What would you like to do?</h1>
                <p class="lead">
                    Choose from the options below to get started with your creative journey.
                </p>
            </div>

            <!-- Cards row -->
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">

                <!-- Card 1: Upload Images -->
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <!-- Icon + Title -->
                            <div class="d-flex align-items-center mb-3">
                                <!-- Circular grey background for icon -->
                                <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                                    style="width: 48px; height: 48px; background-color: rgb(240 240 240);">
                                    <!-- Inline SVG icon -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                        class="bi bi-card-image" viewBox="0 0 16 16">
                                        <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                                        <path
                                            d="M1.5 2A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2zm13 1a.5.5 0 0 1 .5.5v6l-3.775-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12v.54L1 12.5v-9a.5.5 0 0 1 .5-.5z" />
                                    </svg>
                                </div>
                                <h5 class="card-title mb-0">Upload Images</h5>
                            </div>
                            <!-- Description -->
                            <p class="card-text">
                                Upload your photos and images to share with others or use in your projects.
                            </p>
                            <!-- Button (pushed to bottom by mt-auto) -->
                            <a href="#" class="btn btn-dark mt-auto">Upload Images</a>
                        </div>
                    </div>
                </div>

                <!-- Card 3: Upload Audio -->
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-3">
                                <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                                    style="width: 48px; height: 48px; background-color: rgb(240 240 240);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                        class="bi bi-soundwave" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                            d="M8.5 2a.5.5 0 0 1 .5.5v11a.5.5 0 0 1-1 0v-11a.5.5 0 0 1 .5-.5m-2 2a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5m4 0a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5m-6 1.5A.5.5 0 0 1 5 6v4a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m8 0a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m-10 1A.5.5 0 0 1 3 7v2a.5.5 0 0 1-1 0V7a.5.5 0 0 1 .5-.5m12 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0V7a.5.5 0 0 1 .5-.5" />
                                    </svg>
                                </div>
                                <h5 class="card-title mb-0">Upload Audio</h5>
                            </div>
                            <p class="card-text">
                                Upload podcasts, music, or voice recordings to share with your audience.
                            </p>
                            <a href="#" class="btn btn-dark mt-auto">Upload Audio</a>
                        </div>
                    </div>
                </div>

                <!-- Card 2: Upload Video -->
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-3">
                                <div class=" rounded-circle d-flex align-items-center justify-content-center me-3"
                                    style="width: 48px; height: 48px; background-color: rgb(240 240 240);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                        class="bi bi-camera-video" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                            d="M0 5a2 2 0 0 1 2-2h7.5a2 2 0 0 1 1.983 1.738l3.11-1.382A1 1 0 0 1 16 4.269v7.462a1 1 0 0 1-1.406.913l-3.111-1.382A2 2 0 0 1 9.5 13H2a2 2 0 0 1-2-2zm11.5 5.175 3.5 1.556V4.269l-3.5 1.556zM2 4a1 1 0 0 0-1 1v6a1 1 0 0 0 1 1h7.5a1 1 0 0 0 1-1V5a1 1 0 0 0-1-1z" />
                                    </svg>
                                </div>
                                <h5 class="card-title mb-0">Upload Video</h5>
                            </div>
                            <p class="card-text">
                                Share your video content with high-quality streaming and easy sharing options.
                            </p>
                            <a href="#" class="btn btn-dark mt-auto">Upload Video</a>
                        </div>
                    </div>
                </div>

                <!-- Card 2: Upload Video -->
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-3">
                                <div class=" rounded-circle d-flex align-items-center justify-content-center me-3"
                                    style="width: 48px; height: 48px; background-color: rgb(240 240 240);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                        class="bi bi-filetype-pdf" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                            d="M14 4.5V14a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V4.5h-2A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v9H2V2a2 2 0 0 1 2-2h5.5zM1.6 11.85H0v3.999h.791v-1.342h.803q.43 0 .732-.173.305-.175.463-.474a1.4 1.4 0 0 0 .161-.677q0-.375-.158-.677a1.2 1.2 0 0 0-.46-.477q-.3-.18-.732-.179m.545 1.333a.8.8 0 0 1-.085.38.57.57 0 0 1-.238.241.8.8 0 0 1-.375.082H.788V12.48h.66q.327 0 .512.181.185.183.185.522m1.217-1.333v3.999h1.46q.602 0 .998-.237a1.45 1.45 0 0 0 .595-.689q.196-.45.196-1.084 0-.63-.196-1.075a1.43 1.43 0 0 0-.589-.68q-.396-.234-1.005-.234zm.791.645h.563q.371 0 .609.152a.9.9 0 0 1 .354.454q.118.302.118.753a2.3 2.3 0 0 1-.068.592 1.1 1.1 0 0 1-.196.422.8.8 0 0 1-.334.252 1.3 1.3 0 0 1-.483.082h-.563zm3.743 1.763v1.591h-.79V11.85h2.548v.653H7.896v1.117h1.606v.638z" />
                                    </svg>
                                </div>
                                <h5 class="card-title mb-0">Upload PDF Document</h5>
                            </div>
                            <p class="card-text">
                                Upload PDF Document.
                            </p>
                            <a href="#" class="btn btn-dark mt-auto">Upload Document</a>
                        </div>
                    </div>
                </div>

                <!-- Card 4: Create a Story -->
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-3">
                                <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                                    style="width: 48px; height: 48px; background-color: rgb(240 240 240);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                        class="bi bi-book" viewBox="0 0 16 16">
                                        <path
                                            d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783" />
                                    </svg>
                                </div>
                                <h5 class="card-title mb-0">Create a Story</h5>
                            </div>
                            <p class="card-text">
                                Craft engaging stories with text, images, and multimedia elements.
                            </p>
                            <a href="#" class="btn btn-dark mt-auto">Create Story</a>
                        </div>
                    </div>
                </div>

                <!-- Card 5: Create a Collection -->
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-3">
                                <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                                    style="width: 48px; height: 48px; background-color: rgb(240 240 240);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                        class="bi bi-collection" viewBox="0 0 16 16">
                                        <path
                                            d="M2.5 3.5a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1zm2-2a.5.5 0 0 1 0-1h7a.5.5 0 0 1 0 1zM0 13a1.5 1.5 0 0 0 1.5 1.5h13A1.5 1.5 0 0 0 16 13V6a1.5 1.5 0 0 0-1.5-1.5h-13A1.5 1.5 0 0 0 0 6zm1.5.5A.5.5 0 0 1 1 13V6a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5z" />
                                    </svg>
                                </div>
                                <h5 class="card-title mb-0">Create a Collection</h5>
                            </div>
                            <p class="card-text">
                                Organize your content into collections for easy access and sharing.
                            </p>
                            <a href="#" class="btn btn-dark mt-auto">Create Collection</a>
                        </div>
                    </div>
                </div>
            </div>

            {% include 'includes/metadata/separator.twig' %}

            <h3 class="mt-3 text-start">Your uploads - saved but not published</h3>

            <div class="container">
                <div class="row">
                    {% for d in discover|slice(0, 10) %}
                    <div class="col-12 p-0">
                        <div class="card mb-3">
                            <div class="row g-0 align-items-center">
                                <!-- Add align-items-center to align items vertically -->
                                <!-- Image Column -->
                                <div class="col-md-2">
                                    <a href="#">
                                        <img src="{{ d.thumb }}" class="draft-item-img-fluid rounded-start"
                                            alt="{{ d.title }}">
                                    </a>
                                </div>
                                <!-- Details Column -->
                                <div class="col-md-5">
                                    <div class="card-body">
                                        <h5 class="card-title text-start"><a href="#" class="draft-node-title">{{
                                                d.title
                                                }}</a></h5>
                                    </div>
                                </div>
                                <!-- date column -->
                                <div class="col-md-2">
                                    <div class="card-body">
                                        <p class="card-text"><small class="text-muted">1hr ago</small></p>
                                    </div>
                                </div>
                                <!-- Edit Link Column -->
                                <div class="col-md-1">
                                    <div class="card-body d-flex flex-column align-items-center justify-content-around">
                                        <a href="edit.html" class="mb-2">Edit</a>
                                    </div>
                                </div>
                                <!-- Delete Link Column -->
                                <div class="col-md-1">
                                    <div class="card-body d-flex flex-column align-items-center justify-content-around">
                                        <a href="#" class="mb-2">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                {% include 'includes/pagination.twig' %}
            </div>




        </div>
    </div>
</div>

<!-- Modal -->
{% include 'includes/components/empty_modal.twig' %}

{% include 'includes/footer.twig' %}